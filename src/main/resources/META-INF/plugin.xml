<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.chummerua.usecasefiletemplatesplugin</id>
    <name>UseCaseFileTemplatesPlugin Template</name>
    <vendor>chummerua</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <actions>
        <action id="com.chummerua.useCaseFileTemplatesPlugin.createUseCase.NewUseCaseAction"
                class="com.chummerua.useCaseFileTemplatesPlugin.createUseCase.NewUseCaseAction" text="UseCase">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
